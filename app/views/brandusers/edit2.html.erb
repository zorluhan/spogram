<div class="signup signup2">
<div class="container">

<h2 class="text-center">BRAND SIGN UP</h2>

   <%= form_for(@branduser)  do |f| %>  
			  <div class="form-group form-groupname1 pull-left">
			  	  <%= f.text_field :firstname, class: "form-control formcapish" , id: "usr" placeholder: "First Name", onfocus: "this.placeholder = ''" , onblur: "this.placeholder='First Name'" %> 
			  </div>



				<div class="form-group form-groupname2 pull-right">
					 <%= f.text_field :lastname,  class: "form-control formcapish",  id:"usr" , placeholder: "Last Name",  onfocus: "this.placeholder = ''" , onblur: "this.placeholder='Last Name'" %>

				</div>
	
				<div class="form-group form-groupemail">

				<%= f.text_field :email, type:"email" , onblur: "this.placeholder='kimkardashian@gmail.com'",  onfocus: "this.placeholder = ''" , placeholder: "kimkardashian@gmail.com" , id: "email" , class: "form-control formcapish" %>
			   

			  </div>
  
			  <div class="form-group form-grouppass">


			  <%= f.password_field :password , type: "email" , class: "form-control formcapish",  id: "email" , placeholder: "Password" , onfocus: "this.placeholder = ''" , onblur: "this.placeholder='Password'"%>
			     
			  </div>
  
				<div class="form-group form-groupphone">

					<%= f.number_field :phone, type: "email", class: "form-control formcapish",  id: "email" , placeholder: "Phone" , onfocus: "this.placeholder = ''", onblur: "this.placeholder='Phone'" %>

					 
				  </div>
	  
				  <div class="form-group form-groupcomp">

				  	<%= f.text_field :coname, type: "email",  class: "form-control formcapish",  id: "email",  placeholder: "Company" , onfocus: "this.placeholder = ''" , onblur: "this.placeholder='Company'"  %> 

					 
				  </div>
	  
				  <div class="form-group form-grouptitle">
				  	<%= f.text_field :title, type: "email" , class: "form-control formcapish" , id: "email" ,placeholder: "Your Title", onfocus: "this.placeholder = ''",  onblur: "this.placeholder='Your Title'" %>
				  </div>
	  
					  <div class="form-group form-selectfull form-noborder">
					<label for="name" class="gender"><i class="fa fa-globe"></i>Country</label>
					<%= f.select :country, 
				          options_for_select([['Turkey','Turkey'],['USA','USA'], ['Netherlands', 'Netherlands']], params[:country]),
				          {}, { :class => 'selectpicker' }  %>

					</div>

					   <div class="form-group form-groupweb">

					   	<%= f.text_field :cowebsite, type: "email" , class: "form-control formcapish", id: "email" , placeholder: "Website",  onfocus: "this.placeholder = ''" , onblur: "this.placeholder='Website'"   %>
					 
					  </div>
	  
	  <div class="form-group form-selectfull form-noborder">
	<label for="name" class="gender"><i class="fa fa-users"></i>Number of Employees</label>

	<%= f.select :comsize, 
          options_for_select([['0-10','0-10'],['11-50','11-50'], ['51-100', '51-100'], ['101-1000','101-1000'],['1001+','1001+']],2),
          {}, { :class => 'selectpicker' }  %> 
	</div>
	
  <div class="row row0 text-right"> <%= f.submit do %> <button type="submit" class="btn btn-send">SAVE</button> <% end %></div>
  <div class="row row0 text-right terms">By clicking save, you agree to our <a href="/pages/terms">terms of use</a></div>
<%end%>

</div>
</div>

<div class="footer-wrapper">
<div class="container text-center">
	<footer>
		<a href="/pages/about">About</a>
		<a href="/faq">FAQ</a>
		<a href="/privacy">Privacy</a>
		<a href="/pages/terms">Terms</a>
	</footer>
</div>
</div>
<script type="text/javascript">
	$('.selectpicker').selectpicker({
  size: 4
});		
</script>