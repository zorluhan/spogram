<%= render 'layouts/header2' %>
<div class="jumbotron" id="form">
  <div class="container">
    <div class="row">
      <div class="col-xs-5" id="form">
        <br>  	 
        <%= form_for(:session, url: '/blogin') do |f| %>  
          <div class="input-group"> 
            <div class="form-group">
              <%= f.email_field :email, :placeholder => "Email", class: "form-control" %> <br />
            </div>
            <div class="form-group">
              <%= f.password_field :password, :placeholder => "Password", class: "form-control" %> <br />
            </div>
            <div class="actions"> 
              <%= f.submit "Log in", class: "btn btn-primary" %><br />
              OR <%= link_to 'Sign in with LinkedIn', "/brandusers/auth/Linkedin", class: "btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>  
</div>


