<%= form_for(@instauser, :html => {:role => 'form'}) do |f| %>  
 
 
 <%= render 'shared/instauser_error_messages' %>  
 
   <input type="hidden" name="edit" value="<%= params[:edit] %>">
   <div class="form-group form-groupemail">
   <%= f.email_field :email, :type=> "email", :class=> "form-control formcapish", :id => "email", :placeholder => "", :onfocus => "this.placeholder = ''", :onblur => "this.placeholder='Email'" %> <br>
  </div>

    
    <label class="lblpaypal">We have partnered with PayPal for global bank transfers. <a href="http://www.paypal.com.tr" target="_blank">Don't have a PayPal account?</a></label>
    <div class="form-group form-grouppaypal">
    <%= f.email_field :paypal_email, :type=> "email", :class=> "form-control formcapish", :id => "email", :placeholder => "Paypal Email Address, this can be changed later.", :onfocus => "this.placeholder = ''", :onblur => "this.placeholder='Paypal email address. This can be changed later'" %> <br>
   
    </div>

    <div class="form-group">
      <div class="enotif">Email Notification&nbsp;  

        <%= f.check_box :send_email, {:class => "myclass", :style => "mystyle"}, "checked-value", "unchecked-value" %>
      </div>
    </div>

  
    <div class="row row0 text-right"><button type="submit" class="btn btn-send">SAVE</button></div>
    <div class="row row0 text-right terms">By clicking save, you agree to our <a href="#">terms of use</a></div>
    <div class="row row0 top-buffer70 text-left"><button type="button" class="btn btn-default btn-delete" data-toggle="modal" data-target="#myModal">DELETE ACCOUNT</button></div>
<% end %>


<div class="footer-wrapper">
<div class="container text-center">
  <footer>
    <a href="#">Contact</a>
    <a href="#">FAQ</a>
    <a href="#">Privacy</a>
    <a href="#">Terms</a>
  </footer>
</div>
</div>

<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content text-center">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Hey!</h4>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete your Capish account?</p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default btn-modalyes" data-dismiss="modal">Yes</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        </div>
      </div>
    </div>
  </div>
</script>