

 

<link rel="stylesheet" type="text/css" media="screen" title="User Defined Style" href="/js/jquery-ui-1.8.16.custom.css">
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/jquery-ui.min.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="/js/gmaps.js"></script>

<%= render 'layouts/header2' %>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-5" id="form">
      <br>

      <%= form_for(@instauser) do |f| %>  
        <div class="input-group-lg"> 
          <div class="form-group">

     <%= f.label :firstname %><br> 
            <%= f.text_field :firstname, class: "form-control" %> <br>
            <%= f.label :lastname %><br> 
            <%= f.text_field :lastname, class: "form-control" %> <br>

       

            <%= f.label :location %><br> 
            <%= f.text_field :location, id: "gmaps-input-address", placeholder: "Start typing a place name...", class: "form-control" %> <br><br>
            <div id="gmaps-error" style="display: none;"></div>
            <div id="gmaps-canvas" style="display: none;"></div>

            <%= f.label :date_of_birth %><br> 
            <%= f.date_field :date_of_birth, class: "form-control" %> <br>
            <%= f.label :theme %><br> 
            <%= f.select :theme, 
            options_for_select([['General','General'],['Food','Food'],['Travel','Travel'], ['Art','Art'], ['Beauty','Beauty'], ['Fashion','Fashion'],['Dance','Dance'],['Motorcycle','Motorcycle'],['Music','Music'],['Nature','Nature'],['Sport','Sport'], ['Urban Life','Urban Life'],['Fitness','Fitness'], ['Design','Design']], 2), {}, { :class => 'form-control' } %> <br>
            <%= f.label :postperprice %> <br>
            <%= f.number_field :postprice, class: "form-control", :placeholder=> "$" %> <br>
          </div> <br>
          <div class="actions"> 
            <%= f.submit "Save", data: {disable_with: "Saving..."} %><br> 
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
