<%= render 'layouts/header2' %>
<br>


<div class="signup signup2">
<div class="container">
 


<%= form_for(@instauser, :html => {:role => 'form'}) do |f| %>  


  


 <div class="form-group form-groupemail">
 <%= f.email_field :email, :type=> "email", :class=> "form-control formcapish", :id => "email", :placeholder => "<%=@instauser.email%>", :onfocus => "this.placeholder = ''", :onblur => "this.placeholder='Email'" %> <br>
</div>

  
  <label class="lblpaypal">We have partnered with PayPal for global bank transfers. <a href="http://www.paypal.com.tr">Don't have a PayPal account?</a></label>
  <div class="form-group form-grouppaypal">
  <%= f.email_field :paypalemail, :type=> "email", :class=> "form-control formcapish", :id => "email", :placeholder => "Paypal Email Address, this can be changed later.", :onfocus => "this.placeholder = ''", :onblur => "this.placeholder='Paypal email address. This can be changed later'" %> <br>
 
  </div>

<div class="enotif">Email Notification  
    <label><input type="checkbox" value="" checked /> Yes</label>
    <label><input type="checkbox" value="" /> No</label>
  </div>

<%= f.check_box :send_email, {:class => "myclass", :style => "mystyle"}, "checked-value", "unchecked-value" %>
---css for echeckbox----
  <div class="enotif">Email Notification  
    <label><input type="checkbox" value="" checked /> Yes</label>
    <label><input type="checkbox" value="" /> No</label>
  </div>
--------

 

 <div class="form-group form-selectfull form-noborder"><label for="name" class="gender"><i class="fa fa-fire"></i>What passion best describes your Instagram feed?</label>
  <%= f.select :theme, 
            options_for_select([['General','General'],['Food','Food'],['Travel','Travel'], ['Art','Art'], ['Beauty','Beauty'], ['Fashion','Fashion'],['Dance','Dance'],['Motorcycle','Motorcycle'],['Music','Music'],['Nature','Nature'],['Sport','Sport'], ['Urban Life','Urban Life'],['Fitness','Fitness'], ['Design','Design']],@instauser.theme),{}, {class: 'selectpicker'} %>
          </div>

<label class="lblpaypal">This is what brands will see on your profile.</label>
  <div class="form-group form-groupmoney">
    <%= f.number_field :postprice, class: "form-control formcapish", :id=>"usr", :placeholder=> "$" , :onfocus=>"this.placeholder = '$'", :onblur=>"this.placeholder='$'" %>

  </div>
  
 

   
  
  <div class="row row0 text-right"><button type="submit" class="btn btn-send">SAVE</button></div>
  <div class="row row0 text-right terms">By clicking save, you agree to our <a href="#">terms of use</a></div>
  <div class="row row0 top-buffer70 text-left"><button type="button" class="btn btn-default btn-delete" data-toggle="modal" data-target="#myModal">DELETE ACCOUNT</button></div>
</form>

</div>
</div>

<div class="footer-wrapper">
<div class="container text-center">
  <footer>
    <a href="#">Contact</a>
    <a href="#">FAQ</a>
    <a href="#">Privacy</a>
    <a href="#">Terms</a>
  </footer>
</div>
</div>

<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content text-center">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Hey!</h4>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete your Capish account?</p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default btn-modalyes" data-dismiss="modal">Yes</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        </div>
      </div>
    </div>
  </div>
<script type="text/javascript">
  $('.selectpicker').selectpicker({
  size: 4
});   
</script>