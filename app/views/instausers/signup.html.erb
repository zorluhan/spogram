
<script language="javascript" src="https://maps.googleapis.com/maps/api/js?v=3"></script>
<script type="text/javascript" src="/js/gmaps.js"></script>

 

<div class="signup">
  <div class="container">
    <a class="logo" href="#" title="capish">capish</a>
    <h2 class="text-center">ALMOST THERE!</h2>
     <%= form_for(Instauser.new) do |f| %>

      <div class="form-group form-groupemail">
        <%= f.text_field :email, class: "form-control formcapish", id: "email", placeholder: "Email", onfocus: "this.placeholder = ''", onblur: "this.placeholder='Email'" %>
      </div>

      <div class="form-group form-groupname1 pull-left">
        <%= f.text_field :firstname, class: "form-control formcapish", id: "firstname", placeholder: "First Name", onfocus: "this.placeholder = ''", onblur: "this.placeholder='First Name'" %>
      </div>

      <div class="form-group form-groupname2 pull-right">
        <%= f.text_field :lastname, class: "form-control formcapish", id: "lastname", placeholder: "Last Name", onfocus: "this.placeholder = ''", onblur: "this.placeholder='Last Name'" %>
      </div>
      
      <div class="form-group form-grouploc error">
        <%= f.text_field :location, class: "gmapsinput form-control formcapish", placeholder: "Start typing a city", onfocus: "this.placeholder = ''", onblur: "this.placeholder='Start typing a city'" %>
        <div id="gmaps-error" style="display: none;"></div>
        <div id="gmaps-canvas" style="display: none;"></div>        
      </div>

      <div class="form-group form-groupcake">
        <%= f.text_field :date_of_birth, class: "form-control formcapish date_of_birth", placeholder: "Date of birth", onfocus: "this.placeholder = ''", onblur: "this.placeholder='Date of birth'" %>      
      </div>

      <div class="form-group form-selectfull form-noborder">
        <label for="name" class="gender"><i class="fa fa-venus-mars"></i>Gender</label>
        <%= f.select :gender, options_for_select([['Madam','Madam'],['Adam','Adam']] ,2),{:include_blank => 'Select your gender'}, { :class => 'selectpicker' } %>        
      </div>

      <div class="form-group form-selectfull form-noborder">
        <label for="name" class="gender"><i class="fa fa-fire"></i>What passion best describes your Instagram feed?</label>
        <%= f.select :theme, options_for_select([['General','General'],['Food','Food'],['Travel','Travel'], ['Art','Art'], ['Beauty','Beauty'], ['Fashion','Fashion'],['Dance','Dance'],['Motorcycle','Motorcycle'],['Music','Music'],['Nature','Nature'],['Sport','Sport'], ['Urban Life','Urban Life'],['Fitness','Fitness'], ['Design','Design']], 2),{:include_blank => 'Select'}, { :class => 'selectpicker' } %>
      </div>
      
      <label class="lblpaypal">This is the price per post brands will see on your profile.</label>
      <div class="form-group form-groupmoney">
        <%= f.text_field :postprice, class: "form-control formcapish", id: "postprice", placeholder: "Price per post ($). This can be changed at anytime.", onfocus: "this.placeholder = ''", onblur: "this.placeholder='Price per post ($). This can be changed at anytime.'" %>
      </div>
      
      <div class="form-group form-grouppaypal">
        <%= f.text_field :paypal_email, class: "form-control formcapish", id: "paypal_email", placeholder: "Email address associated with Paypal account", onfocus: "this.placeholder = ''", onblur: "this.placeholder='Email address associated with Paypal account'" %>      
      </div>

      <div class="row row0 text-right">
        <%= f.hidden_field :id, :value => session[:instauser_id] %>
        <%= f.hidden_field :disabled, :value => false %>
        <%= f.submit "JOIN", data: {disable_with: "Uploading Now (Be Patient)..."}, class: "btn btn-send" %> 
      </div>
      <div class="row row0 text-right terms">By clicking join, you agree to our <a href="#">terms of use</a></div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  jQuery('.selectpicker').selectpicker({
  size: 4
});   
</script>
