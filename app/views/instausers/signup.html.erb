<link rel="stylesheet" type="text/css" media="screen" title="User Defined Style" href="/js/jquery-ui-1.8.16.custom.css">
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/jquery-ui.min.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="/js/gmaps.js"></script>

<%= render 'layouts/header2' %>

<div class="container">
  <% a=0 %>
  <% counter=0 %>
  <% b=0 %>
  <% c=Array.new %>

  <% for x in @client.user_recent_media %>
    <% c.push(x.images.thumbnail.url) %> 
    <% x.likes[:count] %> 
    <% a=a+x.likes[:count] %>
    <% counter=counter+1 %>
  <%end%>

  <% for t in @client.user_recent_media %>
    <% b=b+t.comments[:count] %>
  <%end%>

  <% @averagecomments=b/(counter.nonzero? || 1)%>
  <% @averagelikes=a/(counter.nonzero? || 1) %>
  <% @profile_picture_url= @client.user.profile_picture %>

  <div class="row">
    <div class="col-md-5" id="form">
      <br>
      <%= form_for(@instauser) do |f| %>  
<%= render 'shared/error_messages' %>
        <div class="input-group"> 
          <div class="form-group">
            
            <%= f.label :firstname %><br> 
            <%= f.text_field :firstname, class: "form-control" %> <br>
            <%= f.label :lastname %><br> 
            <%= f.text_field :lastname, class: "form-control" %> <br>
            <%= f.label :email %><br> 
            <%= f.text_field :email, class: "form-control" %> <br>

            <%= f.label :location %><br> 
            <%= f.text_field :location, id: "gmaps-input-address", placeholder: "Start typing a place name...", class: "form-control" %> <br><br>
            <div id="gmaps-error" style="display: none;"></div>
            <div id="gmaps-canvas" style="display: none;"></div>

            <%= f.label :date_of_birth %><br> 
            <%= f.date_field :date_of_birth, class: "form-control" %> <br>
            <%= "Gender:" %><br>
            <%= f.select :gender, options_for_select([['Male','Male'],['Female','Female']] ,2),{}, { :class => 'form-control' } %><br>
            <br>
            <%= "Select one theme that defines your timeline the most" %><br>
            <%= f.select :theme, 
            options_for_select([['General','General'],['Food','Food'],['Travel','Travel'], ['Art','Art'], ['Beauty','Beauty'], ['Fashion','Fashion'],['Dance','Dance'],['Motorcycle','Motorcycle'],['Music','Music'],['Nature','Nature'],['Sport','Sport'], ['Urban Life','Urban Life'],['Fitness','Fitness'], ['Design','Design']], 2), {}, { :class => 'form-control' } %> <br><br>
            <%= "Min. Price Per Post (min. $100)"  %> <br>
            <%= f.number_field :postprice, class: "form-control", :placeholder=> "$" %> <br>
            <%= f.hidden_field :followed_by, :value => @client.user.counts.followed_by %>
            <%=  f.hidden_field :username, :value => @client.user.username %>
            <%= f.hidden_field :averagelikes, :value => @averagelikes %>
            <%= f.hidden_field :averagecomments, :value => @averagecomments %>
            <%= f.hidden_field :profile_picture,  :value => @profile_picture_url %>
            <%= f.hidden_field :recent_media_urls, :value => c %>

          </div> <br>
          <div class="actions"> 
            <%= f.submit "Create", data: {disable_with: "Uploading Now (Be Patient)..."} %> 
          </div> 
        </div>
      <% end %><br>
    </div>
    <div class="col-md-5">
      <h3><strong>Your influence is an asset. </strong></h3><br>
      Capish helps you leverage your talents to get paid what you deserve. Partner with brands that need the power of your social following. Create organic content for our brand partners and spread their message to your followers.<br>

      <h3><strong>Set your price. </strong></h3><br>
      Set your price and get paid instantly via our secure and worldwide trusted payment platform.
    </div>
  </div>
</div>
