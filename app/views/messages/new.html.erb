<div class="container">

 <% if @sender==0 %>

  <%= form_for(@message) do |f| %>  
  <div class="input-group-lg"> 
  	<div class="form-group">
      <%= image_tag(src=@profile_picture, width: "50") %>
      To: <%= @instauser.fullname %>  
      <br> 
      <br>
     <%= f.text_area :message, class: "form-control" , rows: "15" %><br> 
       <div class="actions"> 
    <%= f.submit "Send", data: {disable_with: "Uploading Now..."} %> 
   </div>
     <%=  f.hidden_field :instauser_id, :value => @instauser_id %>
     <%= f.hidden_field :branduser_id, :value => @branduser_id %>
      <%= f.hidden_field :sender, :value => @sender %>
  </div>  
 <%end%>

  <% elsif @sender==1 %>

  <%= form_for(@message) do |f| %>  
      To: <%= @branduser.coname %>
      <br> 
      <br>
     <%= f.text_area :message, class: "form-control" , rows: "15" %><br> 
       <div class="actions"> 
    <%= f.submit "Send", data: {disable_with: "Uploading Now..."} %> 
   </div>
     <%=  f.hidden_field :instauser_id, :value => @instauser_id %>
     <%= f.hidden_field :branduser_id, :value => @branduser_id %>
      <%= f.hidden_field :sender, :value => @sender %>
  </div>  

   <% end %>


<% else %>
<% redirect_to root_path %>

<%end%>

</div>