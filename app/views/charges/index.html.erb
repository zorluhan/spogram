    <ul class="list-group" id="form">
      <font face="Lobster">
      <li class="list-group-item">
        <h4><font face="Lobster">
        <%= link_to "Accepted", list_charges_path(state: :accepted), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Pending", list_charges_path(state: :pending), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Declined", list_charges_path(state: :declined), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Release Requested", list_charges_path(state: :release_requested), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Completed", list_charges_path(state: :completed), remote: true %> </h4>
      </li>
      </font>
    </ul>
  </div> 

  <div id="publishproposal">
  </div>

<% else %>
  <script type="text/javascript">
    window.location.href="/"  // put your correct path in a string here
  </script>
<%end%>
