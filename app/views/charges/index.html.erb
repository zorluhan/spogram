<%= render 'layouts/header2' %>

<% if (instauser_logged_in? && !branduser_logged_in?) %>
  <!-- buraya unaccepted accepted search tool gelecek !-->
  <div id="leftbar">
    <ul class="list-group" id="form">
      <font face="Lobster">
      <li class="list-group-item"><h4>
        My Earnings: <%= @earned %></h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Accepted", list_charges_path(state: :accepted), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4>
          <%= link_to list_charges_path(state: :pending), remote: true do %>
            Pending
            <% count = unread_charges_count(current_instauser) %> 
            <%= "(#{count})" if count > 0 %>
          <% end %>
        </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Declined", list_charges_path(state: :declined), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Release Requested", list_charges_path(state: :release_requested), remote: true %> </h4>
      </li>
      <li class="list-group-item">
        <h4><%= link_to "Completed", list_charges_path(state: :completed), remote: true %> </h4>
      </li>
      </font>
    </ul>
  </div>

  <div id="publishproposal">
  </div>

<% elsif branduser_logged_in? && !instauser_logged_in? %>
