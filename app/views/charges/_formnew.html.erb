<%= render 'layouts/header2' %>
<div class="msgpage">
<div class="container"> 
  <h2 class="text-center proptitle">PROPOSAL FORM</h2>

   <%= form_for @charge do |f|  %>


<div class="proposalinfo2">
  <div class="subtitle">Product</div>
  

  <div class="form-group">
      <%= f.text_field :product_name, class: "form-control formcapish", id:"email", placeholder: "Product Name *" ,onfocus: "this.placeholder = ''" ,onblur: "this.placeholder='Product Name *'" %>

  </div>



  <div class="form-group">
     <%= f.text_field :product_link, class: "form-control formcapish", id: "email", placeholder: "Product Link" , onfocus: "this.placeholder = ''" ,onblur: "this.placeholder='Product Link'" %>
  


  </div>
  
  <div class="form-group form-noborder form-groupbio">
    <%= f.text_area :product_description, cols: 40, onblur: "this.placeholder='Procuct Description'", onfocus: "this.placeholder = ''" , placeholder: "Procuct Description" %>
     
  </div>

   <div class="form-group">

     <%= f.text_field :instagram_link, type: "email" , class: "form-control formcapish",  id: "email" , placeholder: "Instagram Username",  onfocus: "this.placeholder = ''" , onblur: "this.placeholder='Instagram Username'"  %>
          </div>

  

  </div>
 
 
<div class="proposalinfo2">
  <div class="subtitle">Post</div>
  
  <div class="form-group form-noborder form-groupbio">

       <%= f.text_area :post_description, cols: 40, onblur: "this.placeholder='Post Description'" , onfocus: "this.placeholder = ''" , placeholder: "Post Description" %>
     
  </div>
  
  <div class="form-group form-noborder form-groupbio">

     <%= f.text_area :suggested_caption, cols: 40, onblur: "this.placeholder='Suggested Caption'", onfocus:"this.placeholder = ''" , placeholder:"Suggested Caption" %>

   
  </div>
  
  <div class="form-group form-noborder form-groupbio">
     <%= f.text_area :hash_tags, cols: 40, onblur: "this.placeholder='Hashtags to include'" , onfocus: "this.placeholder = ''" ,placeholder: "Hashtags to include" %>
 
  </div>
  
  <div class="form-group form-noborder form-groupbio">
     <%= f.text_area :user_names, cols: 40, onblur: "this.placeholder='Usernames to include'" , onfocus: "this.placeholder = ''" ,placeholder: "Usernames to include"%>
   
  </div>
</div>
  
<div class="proposalinfo2"> 

  <div class="subtitle">Timeline</div>
  
  <div class="form-group form-noborder birth clearfix">
    <label for="name" class="gender">Earliest post date *</label>
                <%= f.text_field :earliest_post_date, class: "form-control date-field" %>
  </div>
  
  <div class="form-group form-noborder birth clearfix">
    <label for="name" class="gender">Last post date *</label>
       <%= f.text_field :last_post_date, class: "form-control date-field" %>

  </div>
  
</div>

  
  <div class="proposalinfo2">
    <div class="subtitle">Price</div>
    <div class="row row0 bot-buffer10"><span>Instagrammer's Price:</span> $<%= @amount/100 %></div>
    <div class="row row0 bot-buffer10"><span>Service Charge:</span> $<%= (@amount*0.20/100).round(2) %></div>
     <hr>
    <div class="row row0 bot-buffer10"><strong><span>TOTAL:</span> $<%= (@amount*1.20/100).round(2) %></strong><hr>
    <font color="red">Your credit card won't be charged till Instagrammer accepts your proposal. </font></div>
  </div>

   
     
          <%= hidden_field_tag 'charge[amount]', (@amount*1.20).round(2) %> 
          <%= hidden_field_tag :amount, (@amount*1.20).round(2) %> 
          <%= hidden_field_tag :useremail, @instauser.email %>
          <%= hidden_field_tag 'charge[branduser_id]', @branduser.id %>
          <%= hidden_field_tag 'charge[instauser_id]', @instauser.id %>
          <%= hidden_field_tag 'charge[status]', "unaccepted" %> 
          <span align="right">
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description=<%= @message %>
            data-amount= <%= (@amount*1.20).round(2) %>
            data-locale="auto"
            data-label="Submit to Stripe"
            data-email= <%=@branduser.email%>  
            data-allow-remember-me= "false" >SEND</script>  <br> <br>Stripe is a world-wide trusted payment platform.</span>
           
 <% end %>

</div>
</div>

