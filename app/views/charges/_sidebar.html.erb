<% if (instauser_logged_in? && !branduser_logged_in?) %>
  <% if !@charges.present? and params[:action] == 'index' %>
    <div class="txtpage">
      <div class="container">
        <h2 class="text-center">PROPOSALS</h2>
        This is where you will manage the proposals you receive from brands who want to work with you. You will receive an email as soon as a brand is interested.
        <br><br>
        There are currently no proposals in your inbox.
      </div>
    </div>
      

  <% else %>
   <div class="msgpage">
<div class="container">
  <h2 class="text-center">PROPOSALS</h2> 
  
  <div class="subtitle">SNAPSHOT <div class="scoreinfo"><span>Keep an eye on here to keep tabs on your earnings. Request a release when you complete a proposal. Make sure you discuss a proposal with a brand before declining immediately.</span><i class="fa fa-question-circle"></i></div></div>
     
         
          <div class="clearfix">
    <div class="col-lg-4 col-sm-4 col-xs-12 col0">
      <div class="panel widget">
      <div class="widget-title proposalearn">$<%= number_with_precision(@potential_earnings, precision: 2)    %></div>
       <div class="">Potential Earnings</div>
      </div>
    </div>
    <div class="col-lg-4 col-sm-4 col-xs-12 col0">
      <div class="panel widget">
      <div class="widget-title proposalearn">$<%= number_with_precision(@upcomming_eatnings , precision: 2)  %></div>
       <div class="">Upcoming Earnings</div>
      </div>
    </div>
    <div class="col-lg-4 col-sm-4 col-xs-12 col0">
      <div class="panel widget">
      <div class="widget-title proposalearn">$<%= number_with_precision(@total_earnings , precision: 2) %></div>
       <div class="">Total Earnings</div>
      </div>
    </div>
  </div>

  <div class="subtitle subtitle2">MY PROPOSALS <div class="scoreinfo"><span>This is the section where you can keep track of your proposals coming form brands. Before accepting a proposal, discuss details with the brand.</span><i class="fa fa-question-circle"></i></div></div>


 
  <label for="name" class="lblfilter">Filter by status</label>

       <ul class="nav nav-pills nav-pills-sm">
   
        
        <li>   <%= link_to "Accepted", list_charges_path(state: :accepted) %>  </li>
           
       
<li><%= link_to list_charges_path(state: :pending) do %>
              Pending <% count = unread_charges_count(current_instauser) %> 
             <% if count>0 %> <span><em><%= "#{count}" if count > 0 %></em></span><%end%>
            <% end %></li>
          
        
         <li> <%= link_to "Declined", list_charges_path(state: :declined) %>  </li>
           
         
      <li>    <%= link_to "Requested", list_charges_path(state: :release_requested) %>  </li>
         
        
     <li>       <%= link_to list_charges_path(state: :completed) do %>
              Completed
              <% count = completed_charges_count(current_instauser) %> 
           <% if count>0 %>  <span><em> <%= "#{count}" if count > 0 %></em></span> <%end%>
            <% end %></li>
           
       
    </ul>
     

  <% end %>



 



<% elsif branduser_logged_in? && !instauser_logged_in? %>
   <div class="msgpage">
<div class="container">
  <h2 class="text-center">PROPOSALS</h2> 

<div class="subtitle subtitle2">MY PROPOSALS <div class="scoreinfo"><span>Click on each status to see proposals in that bucket. To get more info about status please read our <a href="/faq">FAQ</a> section.</span><i class="fa fa-question-circle"></i></div></div>


 
  <label for="name" class="lblfilter">Filter by status</label>

       <ul class="nav nav-pills nav-pills-sm">
        <li>
          <%= link_to list_charges_path(state: :accepted) do %>
            Accepted  <% if unread_branduser_charges_count(current_branduser, :accepted)!="" %> <span><em><%= unread_branduser_charges_count(current_branduser, :accepted) %></em></span> <%end%>
          <% end %>
      
      </li>
      <li >
       
          <%= link_to 'Pending', list_charges_path(state: :pending) %>
      
      </li>
      <li >
        
          <%= link_to list_charges_path(state: :declined) do %>
            Declined <%if unread_branduser_charges_count(current_branduser, :declined)!=""%> <span><em><%= unread_branduser_charges_count(current_branduser, :declined) %></em></span> <%end%>
          <% end %>
        
      </li>
      <li>
       
          <%= link_to list_charges_path(state: :release_requested) do %>
            Requested <% if unread_branduser_charges_count(current_branduser, :release_requested)!="" %> <span><em> <%= unread_branduser_charges_count(current_branduser, :release_requested) %></em></span> <%end%>
          <% end %>
       
      </li>
      <li >
        
          <%= link_to 'Completed', list_charges_path(state: :completed) %>
       
      </li>
     
    </ul>
 
 
<% else %>
  <script type="text/javascript">
    window.location.href="/"  // put your correct path in a string here
  </script>
<% end %>
